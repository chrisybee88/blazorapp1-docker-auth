@page "/"
@namespace BlazorApp1.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlazorApp1</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />

    <!-- https://app.pluralsight.com/course-player?clipId=f1c35460-f345-4435-a9b1-74ceaafde172 -->
    <!-- https://developer.mozilla.org/en-US/docs/Web/Security/Subresource_Integrity -->
    <!-- https://slproweb.com/products/Win32OpenSSL.html -->

    <!-- Include external content -->
    @* <script type="text/javascript" src="http://localhost/MyWeakCDN/jquery.js"></script> *@

    <!-- generate an SRI for a file -->
    <!-- cat FILENAME.js | openssl dgst -sha384 -binary | openssl base64 -A -->
    <!-- or use VS code extension Generate SRI Hash -->

    <script src="http://localhost/MyWeakCDN/jquery.js"
            integrity="sha384-Pz8LCEs/JDxQeWg/LSo/P0B2Pz8/Pz8tPz8/DnU/JGs/bn44Rj8/MTM/Pz9IPz9zDQo="
            crossorigin="anonymous"></script>

</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
